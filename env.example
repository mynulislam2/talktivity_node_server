# Database Configuration
PG_HOST=localhost
PG_PORT=5432
PG_USER=your_db_user
PG_PASSWORD=your_secure_password
PG_DATABASE=talktivity_db

# API Configuration
API_PORT=8082
JWT_SECRET=your_jwt_secret_key_here
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here

# Payment Gateway Configuration (AamarPay)
AAMARPAY_STORE_ID=your_aamarpay_store_id
AAMARPAY_SIGNATURE_KEY=your_aamarpay_signature_key
AAMARPAY_SANDBOX=true

# Frontend URL
FRONTEND_URL=https://talktivity.app

# Admin Configuration
ADMIN_SETUP_TOKEN=your_admin_setup_token_here

# Security Configuration
NODE_ENV=production
